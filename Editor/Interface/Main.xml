<Root>
	<GridPanel
		HorizontalAlignment="Center"
		VerticalAlignment="Bottom"
		Width="500"
		Height="50"
		Rows="1"
		Columns="10"
		BackgroundColor="FFFFFF22">
		<MyButton Row="0" Column="0" BackgroundColor="FF4400FF" Text="Button"></MyButton>
		<MyButton Row="0" Column="1" BackgroundColor="FF8800FF" Text="Button"></MyButton>
	</GridPanel>
	
	<Histogram
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="50"
		Width="300"
		Height="30"
		TimeSteps="100"
		Interval="10"
		Value="fps"
		Scale="1000.0"
		Id="fpsHistogram">
	</Histogram>
	<Text
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="90"
		Orientation="Horizontal"
		Width="300"
		Height="10"
		Font="ProggyClean"
		FontSize="1.0"
		Text="%g Fps"
		Alignment="Center"
		Value="fpsHistogram:avg">
	</Text>
	
	<Histogram
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="110"
		Width="300"
		Height="30"
		TimeSteps="100"
		Interval="10"
		Value="deltaTime"
		Scale="1.0"
		Id="deltaTimeHistogram">
	</Histogram>
	<StackPanel
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="150"
		Orientation="Horizontal"
		Width="300"
		Height="10">
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ms" Alignment="Left" Value="deltaTimeHistogram:min"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="DeltaTime" Alignment="Center"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ms" Alignment="Right" Value="deltaTimeHistogram:max"></Text>
	</StackPanel>

	<Histogram
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="170"
		Width="300"
		Height="30"
		TimeSteps="100"
		Interval="10"
		Value="graphicTime"
		Scale="1.0"
		Id="graphicTime">
	</Histogram>
	<StackPanel
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="210"
		Orientation="Horizontal"
		Width="300"
		Height="10">
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ns" Alignment="Left" Value="graphicTime:min"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="Graphic" Alignment="Center"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ns" Alignment="Right" Value="graphicTime:max"></Text>
	</StackPanel>

	<Histogram
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="230"
		Width="300"
		Height="30"
		TimeSteps="100"
		Interval="10"
		Value="computeTime"
		Scale="1.0"
		Id="computeTime">
	</Histogram>
	<StackPanel
		HorizontalAlignment="Left"
		VerticalAlignment="Top"
		HorizontalOffset="20"
		VerticalOffset="270"
		Orientation="Horizontal"
		Width="300"
		Height="10">
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ns" Alignment="Left" Value="computeTime:min"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="Compute" Alignment="Center"></Text>
		<Text Font="ProggyClean" FontSize="1.0" Text="%.3f ns" Alignment="Right" Value="computeTime:max"></Text>
	</StackPanel>
	
</Root>